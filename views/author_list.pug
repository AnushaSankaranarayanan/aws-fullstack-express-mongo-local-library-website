extends layout

block content
  h1= title
  
  ul
    each author in author_list
      li 
        if author.dob_formatted && author.dod_formatted
            a(href=author.url) #{author.name} 
            |  (#{author.lifespan})
        else if author.dob_formatted && !author.dod_formatted
            a(href=author.url) #{author.name}  
            | (#{author.dob_formatted})
        else
            a(href=author.url) #{author.name}

    else
      li There are no authors.